---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section id="casestudies" class="py-24 bg-slate-50" data-ps="src/components/home/CaseStudies.astro:v4u095">
  <div class="max-w-7xl mx-auto px-6" data-ps="src/components/home/CaseStudies.astro:v4u096">
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 reveal" data-ps="src/components/home/CaseStudies.astro:v4u097">
      <div class="md:w-2/3" data-ps="src/components/home/CaseStudies.astro:v4u098">
        <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6" data-ps="src/components/home/CaseStudies.astro:v4u099">Proof of Execution.</h2>
        <p class="text-xl text-slate-600" data-ps="src/components/home/CaseStudies.astro:v4u100">
          Real-world deployments at scale. From major tournaments to global platform launches.
        </p>
      </div>
      <a href="/blog" class="mt-8 md:mt-0 text-emerald-700 font-bold hover:text-emerald-700 inline-flex items-center gap-2 group" data-ps="src/components/home/CaseStudies.astro:v4u101">
        View All Case Studies
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8" data-ps="src/components/home/CaseStudies.astro:v4u102">
      {posts.map((post, index) => (
        <a 
          href={`/blog/${post.slug}`} 
          class={`group bg-white rounded-2xl overflow-hidden border border-slate-200 shadow-sm hover:shadow-xl transition-all duration-500 reveal reveal-delay-${index + 1}`}
          data-ps="src/components/home/CaseStudies.astro:v4u103"
        >
          <div class="aspect-[16/9] overflow-hidden" data-ps="src/components/home/CaseStudies.astro:v4u104">
            <img 
              crossorigin="anonymous"
              src={post.data.image || 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&w=800&q=80'} 
              alt={post.data.title} 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-ps="src/components/home/CaseStudies.astro:v4u105"
            />
          </div>
          <div class="p-8" data-ps="src/components/home/CaseStudies.astro:v4u106">
            <div class="text-emerald-700 font-mono text-xs uppercase mb-3" data-ps="src/components/home/CaseStudies.astro:v4u107">{post.data.category}</div>
            <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-emerald-700 transition-colors" data-ps="src/components/home/CaseStudies.astro:v4u108">{post.data.title}</h3>
            <p class="text-slate-600 line-clamp-2" data-ps="src/components/home/CaseStudies.astro:v4u109">{post.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
