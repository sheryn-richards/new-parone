---
import { SITE } from '../config/site';

export interface Props {
  companyName?: string;
  companyDescription?: string;
  copyright?: string;
}

const {
  companyName = SITE.name,
  companyDescription = SITE.description,
  copyright = `2026 ${companyName}, Inc.`
