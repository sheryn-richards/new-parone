---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Contact | ParOne">
  <!-- Header -->
  <section class="pt-[calc(var(--nav-height)+8rem)] pb-24 text-center relative overflow-hidden" data-ps="src/pages/contact.astro:76y6nu">
    <div class="absolute inset-0 z-0" data-ps="src/pages/contact.astro:bg-img">
      <img src="https://images.unsplash.com/photo-1606443192517-919653213206?auto=format&w=1920&q=80" alt="Clubhouse" class="w-full h-full object-cover opacity-30 mix-blend-screen" data-ps="src/pages/contact.astro:j8mgad" />
      <div class="absolute inset-0 bg-gradient-to-t from-[#0f172a] via-[#0f172a]/80 to-[#0f172a]/40" data-ps="src/pages/contact.astro:lx8n1i"></div>
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 hero-animate" data-ps="src/pages/contact.astro:uooped">
      <h1 class="text-5xl md:text-6xl font-light text-white mb-6" data-ps="src/pages/contact.astro:xwwf0p">
        Get in <span class="font-medium bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-cyan-400" data-ps="src/pages/contact.astro:lvpf9o">Touch</span>
      </h1>
      <p class="text-xl text-[var(--text-muted)] max-w-2xl mx-auto hero-animate-delay-1" data-ps="src/pages/contact.astro:wmga19">
        Whether you're looking to build, partner, or need support.
      </p>
    </div>
  </section>

  <!-- Unified Contact Form -->
  <section class="py-24 bg-[var(--background)]" data-ps="src/pages/contact.astro:76y6nv">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8" data-ps="src/pages/contact.astro:uoopee">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-16" data-ps="src/pages/contact.astro:uoopef">
        
        <!-- Sidebar Info -->
        <div class="lg:col-span-1 space-y-12 reveal-left" data-ps="src/pages/contact.astro:lx8n1r">
          <div data-ps="src/pages/contact.astro:lx8n1q">
            <h3 class="text-sm font-medium tracking-widest text-[var(--text-muted)] uppercase mb-4 border-b border-[var(--border)] pb-2" data-ps="src/pages/contact.astro:4k2klj">Direct Reach</h3>
            <p class="text-white text-lg mt-4" data-ps="src/pages/contact.astro:wmga18">hello@parone.com</p>
            <p class="text-[var(--text-muted)] mt-2" data-ps="src/pages/contact.astro:wmga17">+1 (800) 555-0199</p>
          </div>
          <div data-ps="src/pages/contact.astro:lx8n1p">
            <h3 class="text-sm font-medium tracking-widest text-[var(--text-muted)] uppercase mb-4 border-b border-[var(--border)] pb-2" data-ps="src/pages/contact.astro:4k2klk">Global Headquarters</h3>
            <p class="text-white mt-4" data-ps="src/pages/contact.astro:wmga16">New York City</p>
            <p class="text-[var(--text-muted)] mt-2" data-ps="src/pages/contact.astro:wmga0k">United States</p>
          </div>
        </div>

        <!-- The Form -->
        <div class="lg:col-span-2 reveal-right bg-[var(--surface)] p-8 md:p-12 rounded-3xl border border-[var(--border)] shadow-2xl" data-ps="src/pages/contact.astro:lx8n1o">
          <form class="space-y-6" onsubmit="event.preventDefault(); alert('Inquiry submitted successfully. We will be in touch shortly.');">
            
            <div class="space-y-2" data-ps="src/pages/contact.astro:lx8n1n">
              <label for="inquiryType" class="block text-sm font-medium text-[var(--text-muted)]">Type of Inquiry</label>
              <select id="inquiryType" required class="w-full bg-[var(--background)] border border-[var(--border)] rounded-xl px-4 py-4 text-white focus:outline-none focus:border-[var(--primary)] transition-colors appearance-none">
                <option value="" disabled selected>Select an option...</option>
                <option value="dev">ParOne Dev Inquiry</option>
                <option value="holdings">ParOne Holdings Inquiry</option>
                <option value="general">Support / General Contact</option>
              </select>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6" data-ps="src/pages/contact.astro:lx8n1m">
              <div class="space-y-2" data-ps="src/pages/contact.astro:lx8n1l">
                <label for="name" class="block text-sm font-medium text-[var(--text-muted)]">Full Name</label>
                <input type="text" id="name" required class="w-full bg-[var(--background)] border border-[var(--border)] rounded-xl px-4 py-4 text-white focus:outline-none focus:border-[var(--primary)] transition-colors" placeholder="Jane Doe" />
              </div>
              <div class="space-y-2" data-ps="src/pages/contact.astro:lx8n1k">
                <label for="company" class="block text-sm font-medium text-[var(--text-muted)]">Company</label>
                <input type="text" id="company" class="w-full bg-[var(--background)] border border-[var(--border)] rounded-xl px-4 py-4 text-white focus:outline-none focus:border-[var(--primary)] transition-colors" placeholder="Organization" />
              </div>
            </div>

            <div class="space-y-2" data-ps="src/pages/contact.astro:lx8n1j">
              <label for="email" class="block text-sm font-medium text-[var(--text-muted)]">Email Address</label>
              <input type="email" id="email" required class="w-full bg-[var(--background)] border border-[var(--border)] rounded-xl px-4 py-4 text-white focus:outline-none focus:border-[var(--primary)] transition-colors" placeholder="jane@example.com" />
            </div>

            <div class="space-y-2" data-ps="src/pages/contact.astro:lx8n1i">
              <label for="message" class="block text-sm font-medium text-[var(--text-muted)]">Message</label>
              <textarea id="message" rows="5" required class="w-full bg-[var(--background)] border border-[var(--border)] rounded-xl px-4 py-4 text-white focus:outline-none focus:border-[var(--primary)] transition-colors resize-none" placeholder="How can we help you?"></textarea>
            </div>

            <button type="submit" class="w-full py-4 bg-[var(--primary)] text-white font-medium rounded-xl hover:bg-[var(--primary-hover)] transition-all hover-scale shadow-[0_0_20px_rgba(16,185,129,0.2)] mt-8" data-ps="src/pages/contact.astro:qxoibv">
              Submit Inquiry
            </button>
          </form>
        </div>

      </div>
    </div>
  </section>
</BaseLayout>