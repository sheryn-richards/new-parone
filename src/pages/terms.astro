const title = "Terms of Service";
const description = "Read the terms and conditions for using ParOne's websites, applications, and services.";
---

<BaseLayout title={title} description={description}>
  <main class="bg-slate-900 pt-32 pb-20 px-6" data-ps="src/pages/terms.astro:e353yg">
    <div class="max-auto max-w-4xl" data-ps="src/pages/terms.astro:cskzny">
      <header class="mb-12 border-b border-slate-800 pb-8" data-ps="src/pages/terms.astro:uh8dkp">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4" data-ps="src/pages/terms.astro:auyo1j">{title}</h1>
        <p class="text-slate-400" data-ps="src/pages/terms.astro:zhj1on">Last updated: April 10, 2025</p>
      </header>

      <div class="prose prose-invert prose-slate max-w-none" data-ps="src/pages/terms.astro:cskznx">
        <h2 class="text-white" data-ps="src/pages/terms.astro:x64hqj">Ownership of Service</h2>
        <p data-ps="src/pages/terms.astro:zhj1om">Welcome to ParOne, Inc. The ParOne, Inc websites (www.parone.com, www.parone.io, www.parone.dev, www.parone.app, www.parone.ai) and any variations of, subdomains or successors to these websites, collectively, the “ParOne Website” or the “Website”, ParOne, Inc applications and the ParOne service are owned by ParOne, Inc.</p>

