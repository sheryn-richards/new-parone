---
import BaseLayout from '@/layouts/BaseLayout.astro';

// Team members data
const staff = [
  { name: 'JR Charles', title: 'CEO' },
  { name: 'Taz Nakonecznyj', title: 'CTO' },
  { name: 'Manny Veloso', title: 'Senior Cloud Engineer' },
  { name: 'Fahim Bashar', title: 'UI / UX Designer' },
  { name: 'Rich Katz', title: 'Senior Advisor' }
];

const avaGolf = [
  { name: 'Aron Schüler', title: 'Director of Engineering' },
  { name: 'Sheryn Richards', title: 'Director of Marketing' },
  { name: 'Harsha Koritala', title: 'Full Stack Engineer' },
  { name: 'Tushar Wani', title: 'Intern' },
  { name: 'DJ Amerson', title: 'Head of Production' }
];

const parOneDev = [
  { name: 'Jonathan Harty', title: 'Technical Project Director' },
  { name: 'Rufaro Zengeni', title: 'Project Manager' },
  { name: 'Eric Mutton', title: 'Full Stack Engineer' },
  { name: 'Dev Kumar', title: 'Full Stack Engineer' },
  { name: 'Safa Aman', title: 'Full Stack Engineer' },
  { name: 'Emilio Gonzalez', title: 'Full Stack Engineer' },
  { name: 'Danny Amezquita', title: 'Full Stack Engineer' },
  { name: 'Abeer Jalal', title: 'Front-End Developer' },
  { name: 'Alex Quigley', title: 'Full Stack Engineer' }
];

const stats = [
  { value: '46 K+', label: 'Livestream Hours Viewed' },
  { value: '110 M+', label: 'Annual Video Views' },
  { value: '120 B+', label: 'Stats Generated' }
];
---

<BaseLayout title="Team | ParOne">
  <!-- Hero Section -->
  <section class="pt-[calc(var(--nav-height)+4rem)] pb-20 relative overflow-hidden" data-ps="src/pages/team.astro:juxuze">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-900/10 to-transparent pointer-events-none" data-ps="src/pages/team.astro:yb61xz"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10 text-center" data-ps="src/pages/team.astro:yb61y0">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6" data-ps="src/pages/team.astro:qwvgnf">Discover the Heart Behind ParOne</h1>
      <p class="text-xl text-slate-400 max-w-3xl mx-auto mb-12" data-ps="src/pages/team.astro:vgx3dk">
        Your Trusted Partner in Excellence. Learn About Our Team, Vision, and Commitment to Delivering Top-tier Solutions.
      </p>
    </div>
  </section>

  <!-- Photo Collage Section -->
  <section class="py-12 border-b border-white/5 bg-white/5" data-ps="src/pages/team.astro:frames_section">
    <div class="max-w-7xl mx-auto px-6" data-ps="src/pages/team.astro:yb61y8">
      <div class="relative h-[400px] md:h-[500px]" data-ps="src/pages/team.astro:collage_container">
        <!-- Main Image -->
        <div class="absolute top-0 left-0 w-3/4 h-4/5 rounded-2xl overflow-hidden border-4 border-white/10 shadow-2xl z-10" data-ps="src/pages/team.astro:collage_img_1">
          <img 
            crossorigin="anonymous"
            src="https://images.unsplash.com/photo-1700561570982-5f845601c505?auto=format&w=1200&q=80" 
            srcset="https://images.unsplash.com/photo-1700561570982-5f845601c505?auto=format&w=400&q=80 400w, https://images.unsplash.com/photo-1700561570982-5f845601c505?auto=format&w=800&q=80 800w, https://images.unsplash.com/photo-1700561570982-5f845601c505?auto=format&w=1200&q=80 1200w"
            sizes="(max-width: 768px) 75vw, 60vw"
            alt="Team collaboration" 
            class="w-full h-full object-cover" data-ps="src/pages/team.astro:vswxmq" />
        </div>
        <!-- Overlapping Image -->
        <div class="absolute bottom-0 right-0 w-1/2 h-3/5 rounded-2xl overflow-hidden border-4 border-white/10 shadow-2xl z-20" data-ps="src/pages/team.astro:collage_img_2">
          <img 
            crossorigin="anonymous"
            src="https://images.unsplash.com/photo-1770777843445-2a1621b1201d?auto=format&w=1200&q=80" 
            srcset="https://images.unsplash.com/photo-1770777843445-2a1621b1201d?auto=format&w=400&q=80 400w, https://images.unsplash.com/photo-1770777843445-2a1621b1201d?auto=format&w=800&q=80 800w, https://images.unsplash.com/photo-1770777843445-2a1621b1201d?auto=format&w=1200&q=80 1200w"
            sizes="(max-width: 768px) 50vw, 40vw"
            alt="Team meeting" 
            class="w-full h-full object-cover" data-ps="src/pages/team.astro:vswxmr" />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-24 bg-slate-900/50 border-y border-white/5" data-ps="src/pages/team.astro:juxuzd">
    <div class="max-w-7xl mx-auto px-6" data-ps="src/pages/team.astro:yb61y1">
      <div class="text-center mb-16" data-ps="src/pages/team.astro:yb61y2">
        <span class="text-blue-500 font-bold tracking-widest text-sm uppercase mb-2 block" data-ps="src/pages/team.astro:oiar4r">Achieving Excellence</span>
        <h2 class="text-3xl md:text-4xl font-bold text-white" data-ps="src/pages/team.astro:tfto42">A Few Numbers We Are Proud Of</h2>
        <p class="text-slate-400 mt-4" data-ps="src/pages/team.astro:vgx3dl">Explore the remarkable achievements that define our success.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8" data-ps="src/pages/team.astro:yb61y3">
        {stats.map((stat) => (
          <div class="p-8 rounded-2xl bg-white/5 border border-white/10 text-center" data-ps="src/pages/team.astro:yb61y4">
            <div class="text-4xl md:text-5xl font-bold text-white mb-2" data-ps="src/pages/team.astro:yb61y5">{stat.value}</div>
            <div class="text-slate-400 font-medium" data-ps="src/pages/team.astro:yb61y6">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-24 relative" data-ps="src/pages/team.astro:juxuzc">
    <div class="max-w-7xl mx-auto px-6" data-ps="src/pages/team.astro:yb61y7">
      <div class="text-center mb-20" data-ps="src/pages/team.astro:yb61y8">
        <span class="text-blue-500 font-bold tracking-widest text-sm uppercase mb-2 block" data-ps="src/pages/team.astro:oiar5d">Our Team Members</span>
        <h2 class="text-3xl md:text-4xl font-bold text-white" data-ps="src/pages/team.astro:tfto43">The Amazing Team Behind ParOne</h2>
      </div>

      <!-- Staff Members -->
      <div class="mb-20" data-ps="src/pages/team.astro:a9sl7s">
        <h3 class="text-2xl font-bold text-white mb-8 border-b border-white/10 pb-4" data-ps="src/pages/team.astro:ereqvu">Staff Members</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6" data-ps="src/pages/team.astro:a9sl7t">
          {staff.map((member, index) => (
            <div class="group relative overflow-hidden rounded-xl bg-slate-800/50 border border-white/5 hover:border-blue-500/30 transition-all" data-ps="src/pages/team.astro:a9sl7u">
              <div class="aspect-[4/5] w-full overflow-hidden bg-slate-900 relative" data-ps="src/pages/team.astro:a9sl7t">
                 <img 
                   src={index % 2 === 0 
                     ? "https://images.unsplash.com/photo-1560250097-0b93528c311a?auto=format&w=800&q=80" 
                     : "https://images.unsplash.com/photo-1519085360753-af0119f7cbe7?auto=format&w=800&q=80"} 
                   alt={member.name} 
                   class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 opacity-90 group-hover:opacity-100" data-ps="src/pages/team.astro:vswxmr" />
                 <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent opacity-90" data-ps="src/pages/team.astro:a9sl7u"></div>
                 <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300" data-ps="src/pages/team.astro:a9sl7v">
                    <h4 class="text-lg font-bold text-white group-hover:text-blue-400 transition-colors" data-ps="src/pages/team.astro:2zto7">{member.name}</h4>
                    <p class="text-slate-400 text-sm mt-1" data-ps="src/pages/team.astro:vgx3dm">{member.title}</p>
                    <div class="flex gap-3 mt-3 opacity-100 transition-opacity duration-300 delay-100" data-ps="src/pages/team.astro:a9sl7z">
                      <a href="#" class="text-white/60 hover:text-white transition-colors" aria-label="LinkedIn" data-ps="src/pages/team.astro:wg91u0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
                      </a>
                      <a href="#" class="text-white/60 hover:text-white transition-colors" aria-label="GitHub" data-ps="src/pages/team.astro:wg91tz">
