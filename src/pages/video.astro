---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Client Sign In | ParOne">
  <!-- Sign In Container -->
  <section class="min-h-screen flex items-center justify-center bg-[var(--background)] py-20 px-4 relative overflow-hidden" data-ps="src/pages/video.astro:y13he7">
    <!-- Abstract Background -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_0%,rgba(16,185,129,0.05)_0%,transparent_70%)] z-0" data-ps="src/pages/video.astro:hkbgjs"></div>
    <div class="absolute inset-0 bg-[linear-gradient(45deg,rgba(255,255,255,0.02)_25%,transparent_25%,transparent_50%,rgba(255,255,255,0.02)_50%,rgba(255,255,255,0.02)_75%,transparent_75%,transparent_100%)] bg-[length:4px_4px] z-0 opacity-50" data-ps="src/pages/video.astro:hkbgjr"></div>
    
    <div class="w-full max-w-md bg-[var(--surface)] p-10 rounded-3xl border border-[var(--border)] shadow-2xl relative z-10 hero-animate" data-ps="src/pages/video.astro:hkbgjq">
      <div class="text-center mb-10" data-ps="src/pages/video.astro:hkbgjp">
        <img src="https://cdn.pagesmith.app/f0c80795/images/parone-HD-1536-1536.webp" alt="ParOne Logo" class="h-10 mx-auto mb-8" data-ps="src/pages/video.astro:nljms2" />
        <h1 class="text-2xl font-light text-white mb-2" data-ps="src/pages/video.astro:yonut2">Sign In</h1>
        <p class="text-sm text-[var(--text-muted)]" data-ps="src/pages/video.astro:qszpzi">Secure access to client video assets.</p>
      </div>

      <form class="space-y-6" onsubmit="event.preventDefault(); alert('Invalid credentials. Please contact your account manager.');">
        <div class="space-y-2" data-ps="src/pages/video.astro:hkbgjo">
          <label for="email" class="block text-xs font-medium uppercase tracking-widest text-[var(--text-muted)]">Email</label>
          <input 
            type="email" 
            id="email" 
            required 
            class="w-full bg-[var(--background)] border border-[var(--border)] rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[var(--primary)] transition-colors" 
          />
        </div>

        <div class="space-y-2" data-ps="src/pages/video.astro:hkbgjn">
          <div class="flex items-center justify-between" data-ps="src/pages/video.astro:hkbgjm">
            <label for="password" class="block text-xs font-medium uppercase tracking-widest text-[var(--text-muted)]">Password</label>
            <a href="#" class="text-xs text-[var(--primary)] hover:text-white transition-colors" data-ps="src/pages/video.astro:xwxmpb">Forgot?</a>
          </div>
          <input 
            type="password" 
            id="password" 
            required 
            class="w-full bg-[var(--background)] border border-[var(--border)] rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[var(--primary)] transition-colors font-mono" 
          />
        </div>

        <button type="submit" class="w-full py-3 bg-white text-black font-medium rounded-lg hover:bg-gray-200 transition-colors mt-8" data-ps="src/pages/video.astro:nkd9sq">
          Sign In
        </button>
      </form>

      <div class="mt-8 pt-8 border-t border-[var(--border)] text-center" data-ps="src/pages/video.astro:hkbgjl">
        <p class="text-xs text-[var(--text-muted)] flex items-center justify-center gap-2" data-ps="src/pages/video.astro:qszpzj">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[var(--accent-green)]"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
          Encrypted Connection
        </p>
      </div>
    </div>
  </section>
</BaseLayout>