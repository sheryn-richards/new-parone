---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PlatformCards from '@/components/PlatformCards.astro';
import PressCards from '@/components/PressCards.astro';

// Images
const heroImage = "https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=1920&q=80";
const heroSrcset = "https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=320&q=80 320w, https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=768&q=80 768w, https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=1280&q=80 1280w, https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=1920&q=80 1920w";

const partners = [
  { name: 'GOLF.com', logo: 'https://cdn.pagesmith.app/f0c80795/images/golf-169-169.webp' },
  { name: 'GOLFTEC', logo: 'https://cdn.pagesmith.app/f0c80795/images/golftec-169-169.webp' },
  { name: 'SwingU', logo: 'https://cdn.pagesmith.app/f0c80795/images/swingu-169-169.webp' },
  { name: 'PGA TOUR', logo: 'https://cdn.pagesmith.app/f0c80795/images/pga-tour-169-169.webp' }
];
---

<BaseLayout 
  title="ParOne | Technology, Media, and Golf Solutions" 
  description="ParOne combines smart tech, media, and golf solutions to turn bold ideas into results across ParOne Dev, ParOne Holdings, AVA Golf, GolfCentral.tv, and the ParOne App."
>
  
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center pt-20 overflow-hidden bg-[#0f172a]" data-ps="src/pages/index.astro:hero">
    <!-- Background Layers -->
    <div class="absolute inset-0 z-0" data-ps="src/pages/index.astro:mpxes">
      <div class="absolute inset-0 bg-[#0f172a]/60 z-10" data-ps="src/pages/index.astro:mpxet"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-[#0f172a] via-transparent to-transparent z-20" data-ps="src/pages/index.astro:mpxeu"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(56,189,248,0.1),transparent_70%)] z-20 opacity-40" data-ps="src/pages/index.astro:mpxev"></div>
      <img 
        crossorigin="anonymous"
        src={heroImage}
        srcset={heroSrcset}
        sizes="100vw"
        alt="Bright sunny golf fairway"
        class="w-full h-full object-cover opacity-60 mix-blend-screen"
        loading="eager" data-ps="src/pages/index.astro:1vj6xf" />
    </div>

    <!-- Content -->
    <div class="relative z-30 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full" data-ps="src/pages/index.astro:mpxew">
      <div class="max-w-4xl" data-ps="src/pages/index.astro:mpxex">
        <h1 class="text-6xl md:text-8xl font-bold tracking-tighter text-white mb-8 leading-[0.9]" data-ps="src/pages/index.astro:n8luf4">
          Big Ideas, <br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-white via-blue-400 to-teal-400" data-ps="src/pages/index.astro:m1wpr3">Delivered.</span>
        </h1>
        <h2 class="text-lg md:text-xl text-slate-300 max-w-2xl mb-12 font-light leading-relaxed border-l-2 border-blue-500 pl-6" data-ps="src/pages/index.astro:8k6x7h">
          We’re the team that makes things happen across golf, media, and technology — delivering solutions that last. We bring your vision to life.
        </h2>
        <div class="flex flex-col sm:flex-row gap-6" data-ps="src/pages/index.astro:mpxey">
          <a href="#pillars" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-sky-500 to-blue-600 text-white font-bold uppercase tracking-wider hover:shadow-[0_0_20px_rgba(14,165,233,0.3)] transition-all hover:scale-105 rounded-full" data-ps="src/pages/index.astro:40lbaq">
            <span class="" data-ps="src/pages/index.astro:m1wpr2">Take a Look at What We Do</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-30 animate-bounce" data-ps="src/pages/index.astro:mpxfk">
      <svg class="w-6 h-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>

  <!-- Pillars Section -->
  <section id="pillars" class="py-16 bg-[#0f172a] relative z-20" data-ps="src/pages/index.astro:10ineb">
    <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8" data-ps="src/pages/index.astro:mpxfl">
      <PlatformCards />
    </div>
  </section>

  <!-- Partners Section -->
  <section class="py-12 bg-[#0f172a] border-y border-white/5" data-ps="src/pages/index.astro:10inex">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center" data-ps="src/pages/index.astro:mpxft">
      <p class="text-[10px] font-bold text-blue-400 uppercase tracking-[0.2em] mb-8 opacity-80" data-ps="src/pages/index.astro:b4j7yx">Trusted by leading platforms across the golf industry</p>
      
      <div class="flex flex-wrap justify-center items-center gap-10 md:gap-20" data-ps="src/pages/index.astro:2b7xnj">
        {partners.map(partner => (
          <div class="group relative" data-ps="src/pages/index.astro:2b7xnk">
            <img 
              src={partner.logo} 
              alt={partner.name} 
              class="h-5 md:h-6 w-auto object-contain opacity-40 grayscale group-hover:opacity-100 group-hover:grayscale-0 transition-all duration-500" 
              loading="lazy" data-ps="src/pages/index.astro:rk10zg" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Press Highlights -->
  <section class="py-16 bg-[#1e293b]" data-ps="src/pages/index.astro:10iney">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" data-ps="src/pages/index.astro:2b7xnl">
      <div class="flex items-end justify-between mb-12" data-ps="src/pages/index.astro:2b7xnm">
        <div data-ps="src/pages/index.astro:2b7xnn">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" data-ps="src/pages/index.astro:8k6x7i">Press Highlights</h2>
          <p class="text-slate-400" data-ps="src/pages/index.astro:b4j7yw">Latest updates from ParOne.</p>
        </div>
        <a href="/press" class="hidden md:inline-flex items-center gap-2 text-blue-400 hover:text-white transition-colors text-sm font-bold uppercase tracking-wider" data-ps="src/pages/index.astro:40lba3">
          View All News
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
        </a>
      </div>

      <PressCards limit={3} />
      
      <div class="mt-12 text-center md:hidden" data-ps="src/pages/index.astro:2b7xnq">
        <a href="/press" class="inline-flex items-center gap-2 text-blue-400 hover:text-white transition-colors text-sm font-bold uppercase tracking-wider" data-ps="src/pages/index.astro:40lba1">
          View All News
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-32 bg-[#0f172a] relative overflow-hidden" data-ps="src/pages/index.astro:10inez">
    <!-- Background Layers -->
    <div class="absolute inset-0 z-0" data-ps="src/pages/index.astro:cta-bg">
      <div class="absolute inset-0 bg-[#0f172a]/80 z-10" data-ps="src/pages/index.astro:cta-overlay"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-[#0f172a] via-transparent to-[#0f172a] z-20" data-ps="src/pages/index.astro:cta-gradient"></div>
      <img 
        crossorigin="anonymous"
        src="https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=1200&q=80"
        srcset="https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=400&q=80 400w, https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=800&q=80 800w, https://images.unsplash.com/photo-1605144156546-91acf5e4cffd?auto=format&w=1200&q=80 1200w"
        sizes="100vw"
        alt="Cinematic aerial view of a golf course fairway"
        class="w-full h-full object-cover opacity-40 mix-blend-overlay"
        loading="lazy" data-ps="src/pages/index.astro:cta-img" />
    </div>

    <div class="max-w-4xl mx-auto px-4 text-center relative z-10" data-ps="src/pages/index.astro:2b7xns">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-8 tracking-tight" data-ps="src/pages/index.astro:8k6x7j">
        Have an idea? <br/>
        <span class="text-blue-400" data-ps="src/pages/index.astro:m1wpqa">Let’s make it real.</span>
      </h2>
      <p class="text-lg text-slate-400 mb-12 max-w-2xl mx-auto" data-ps="src/pages/index.astro:b4j7yu">
        We like challenges. Whether it's a new platform, a strategic investment, or a media partnership — let's talk about yours.
      </p>
      <a href="/contact" class="inline-flex items-center justify-center px-10 py-5 bg-white text-[#0f172a] font-bold uppercase tracking-wider hover:bg-blue-500 hover:text-white transition-colors text-sm rounded-full" data-ps="src/pages/index.astro:40lba0">
        <span class="" data-ps="src/pages/index.astro:m1wpq9">Contact Us</span>
      </a>
    </div>
  </section>

</BaseLayout>
